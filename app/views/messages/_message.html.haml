.main-message{data: {message: {id: message.id}}}
  .main-message__up-user
    %p.main-message__up-user__up-name
      = message.user.name
    %p.main-message__up-user__up-day
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  - if message.text.present?
    %p.main-message__text
      = message.text
  = image_tag message.image.url, class: 'main-message__image' if message.image.present?