.main-chat
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group
        techcamp
      %p.main-header__left-box__member
        Member:name
    = link_to "#",class: "main-header__edit-btn" do
      Edit
  .main-messages
    .main-message
      .main-message__up-user
        %p.main-message__up-user__up-name
          name
        %p.main-message__up-user__up-day
          2020/2/9(Sun) 10:00:01
      %p.main-message__text
        こんにちは
  .main-form
    .main-form__new-message
      .input-box
        %input.input-box__text{placeholder:"type a message"}
          %label{class: "input-box__text__image"}
            = icon('fas','image')
            %input{class:"file",type:"file"}
      %input.submit-btn{:type => "submit", :value => "Send"}
